{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "eslint:recommended",
    "prettier"
  ],
  "plugins": ["prettier", "unused-imports"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["./tsconfig.json"],
        "projectService": true,
        "tsconfigRootDir": "./"
      },
      "extends": [
        "next/core-web-vitals",
        "plugin:@typescript-eslint/recommended"
      ]
    }
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      },
      { "usePrettierrc": true }
    ],
    "unused-imports/no-unused-imports": "error"
  }
}
